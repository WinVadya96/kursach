@model kursach.Models.ApplicationUser

@{
    ViewBag.Title = "Delete";
}

<h2>Вы действительно хотите удалить пользователя?</h2>

@using (Html.BeginForm())
{
    <input type="submit" value="Удалить пользователя" />
    <button id="delete-user_change-mind__button">Одуматься</button>
}

<script>
    $("#delete-user_change-mind__button").click(function (event) {
        event.preventDefault();
        event.stopPropagation();

        window.history.back()
    })
</script>
