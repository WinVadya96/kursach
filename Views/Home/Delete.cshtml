@model kursach.Models.ApplicationUser

@{
    ViewBag.Title = "Delete";
}

<h2>Are you sure you want to delete the user?</h2>

@using (Html.BeginForm())
{
    <input type="submit" value="Delete user" />
    <button id="delete-user_change-mind__button">Think over</button>
}

<script>
    $("#delete-user_change-mind__button").click(function (event) {
        event.preventDefault();
        event.stopPropagation();

        window.history.back()
    })
</script>
